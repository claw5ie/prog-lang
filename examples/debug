val00 := 0;

// TODO: allow to assign constants to enumerators, e.g. "A = 2 + 2".
Baz := enum
{
  A,
  B,
  C,
}

Faz := union
{
  x: int,
  y: bool,
}

Foo := struct
{
  x: int,
  y: bool,
  z: Baz,
}

Bar := struct
{
  foo: Foo,
}

bar := proc()
{
  x: Foo = .{ x = 2, y = false };
  x = .{ x = 2 };
  x.x.foo = 2;
  x.z = .A;

  if false then {} else {}

  val00 = val00 + 42;
  return;
}

main := proc() -> void
{
  val0 := -2 + 2;
  val1: int = 2;
  val2: bool = false;

  val0 = 4;
  val3: proc() = main;
  val3();

  if !true || false && true
    ;
  else
    ;

  val4: int;

  main();

  print foo(2, 3 + 2);
  return;
}

foo := proc(a: int, b: int,) -> int
{
  return a + b;
}
